<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Create Bot</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>

<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <div class="navbar-brand">CrypTerminator</div>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <%= link_to 'Home', root_path, class: 'nav-link'%>
        <%= link_to 'Your Bots', bots_path, class: 'nav-link'%>
        <%= link_to 'New Bot', new_bot_path, class: 'nav-link'%>
        <div style="padding-left: 1000px;"><%= link_to 'Logout', '/logout', class: 'nav-link' %></div>
      </div>
    </div>
  </div>
</nav>
<div class = "row" style="padding-top: 15px">
<div class="col-md-4 justify-content-center">
<iframe src='https://www.youtube.com/embed/<%= @edu.youtube_id %>?enablejsapi=1&amp;autoplay=1' frameborder='0' allowfullscreen height="280"
        width="498" ></iframe>
<p><%= @edu.description %></p>
<div>
  <div class="card" style="width: 27rem;">
    <div class="card">
      <div class="card-body">
        <h1><%= @edu.channel %></h1>
        <table class="table table-striped col-md-12" id="bot_output">
          <tr>
            <th>Attribute</th>
            <th>Value</th>
          </tr>
          <% @edu.attributes.each do |key, value| %>
            <% unless %w[description username id updated_at youtube_id channel link created_at].include? key %>
              <tr>
                <%  if !value.nil? %>
                  <td><%=  key  %></td>
                    <td><%= value %></td>
                <%  end  %>
              </tr>
            <% end %>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>



  <% if @run == 'T' %>
      <%= link_to 'Reset BackTest', edus_show_path(:id => @edu, :fetch => false), class: 'btn btn-primary'%>
  <% else %>
      <%= link_to 'Fetch BackTest for This Bot', edus_show_path(:id => @edu, :fetch => true), class: 'btn btn-primary' %>
  <% end %>


  <%= link_to 'Copy Bot Configuration', edus_copybot_path(@edu), class: 'btn btn-primary' %>



</div>
<% if @run == 'T' %>
    <div class="col-md-8" style="padding-left: 50px">
      <div class="row">
        <div class="col">
          <div>
            <div class="card" style="width: 27rem;">
              <div class="card">
                <div class="card-body">
                  <h1>Profit Net Loss (%)</h1>
                  <table class="table table-striped col-md-12" id="edu_output">

                    <%= line_chart @chart_data_pnl, label: "PNL", ytitle: "PNL", height: "200px" %>

                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col">
          <div class="card" style="width: 27rem;">
            <div class="card">
              <div class="card-body">
                <h1>Win Rate (%)</h1>
                <table class="table table-striped col-md-12" id="edu_output">

                  <%= line_chart @chart_data_wr, label: "WR", ytitle: "WR", height: "200px"%>

                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="h-100 d-flex justify-content-center align-items-center" style="backdrop-filter: blur(5px);">
            <div>
              <div class="card" style="width: 27rem;">
                <div class="card">
                  <div class="card-body">
                    <h1>Trade Count</h1>
                    <table class="table table-striped col-md-12" id="bot_output">

                      <%= line_chart @chart_data_tc, label: "TC", ytitle: "TC", height: "200px"%>

                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    </div>
<% end %>
</body>
</html>