<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Create Bot</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>

<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <div class="navbar-brand">CrypTerminator</div>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <%= link_to 'Home', root_path, class: 'nav-link'%>
        <%= link_to 'Your Bots', bots_path, class: 'nav-link'%>
        <%= link_to 'New Bot', new_bot_path, class: 'nav-link'%>
        <div style="padding-left: 1000px;"><%= link_to 'Logout', '/logout', class: 'nav-link' %></div>
      </div>
    </div>
  </div>
</nav>
<iframe src='https://www.youtube.com/embed/<% @edu.youtube_id %>?enablejsapi=1&amp;autoplay=1' frameborder='0' allowfullscreen height="400"
        width="711"></iframe>
<p><% @edu.description %></p>
<div>
  <div class="card" style="width: 27rem;">
    <div class="card">
      <div class="card-body">
        <h1><% @edu.channel %></h1>
        <table class="table table-striped col-md-12" id="bot_output">
          <tr>
            <th>Attribute</th>
            <th>Value</th>
          </tr>
          <% @edu.attributes.each do |key, value| %>
            <% unless %w[description username id updated_at youtube_id channel link created_at].include? key %>
              <tr>
                <%  if !value.nil? %>
                  <td><%=  key  %></td>
                    <td><%= value %></td>
                <%  end  %>
              </tr>
            <% end %>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>

<% if @edu.run %>
  <%= link_to 'Stop BackTest', edus_stoptest_path(@edu), class: 'btn btn-primary col-3' %>
<% else %>
  <%= link_to 'BackTest this bot', edus_backtest_path(@edu), class: 'btn btn-primary col-3' %>
<% end %>
<%= link_to 'Copy Bot Configuration', bots_path, class: 'btn btn-primary col-3' %>
</body>
</html>